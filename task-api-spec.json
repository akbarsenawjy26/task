{
  "openapi": "3.0.0",
  "info": {
    "title": "Task RestfulAPI",
    "description": "Micro Project untuk latihan golang",
    "version": "1.0.0",
    "contact": {
      "name": "Akbar Sena"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8080/api/v1"
    }
  ],
  "paths": {
    "/task": {
      "post": {
        "summary": "Create a new task",
        "description": "Menambahkan task baru",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateTaskRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Task created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Task"
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Get all tasks",
        "description": "Mengambil semua task",
        "responses": {
          "200": {
            "description": "List of tasks",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Task"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/task/{id}": {
      "put": {
        "summary": "Update task by ID",
        "description": "Mengupdate task berdasarkan ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateTaskRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Task updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Task"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete task by ID",
        "description": "Menghapus task berdasarkan ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Task deleted successfully"
          }
        }
      }
    },
    "/task/status/{status}": {
      "get": {
        "summary": "Get tasks by status",
        "description": "Mengambil task berdasarkan status",
        "parameters": [
          {
            "name": "status",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of tasks with the specified status",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Task"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Task": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "description": {
            "type": "string",
            "example": "Task description"
          },
          "status": {
            "type": "string",
            "example": "pending"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "example": "2024-09-06T12:00:00Z"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time",
            "example": "2024-09-06T12:00:00Z"
          }
        }
      },
      "CreateTaskRequest": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string",
            "example": "Task description"
          },
          "status": {
            "type": "string",
            "example": "pending"
          }
        }
      },
      "UpdateTaskRequest": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string",
            "example": "Updated task description"
          },
          "status": {
            "type": "string",
            "example": "completed"
          }
        }
      }
    }
  }
}
